# Production Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_NAME=peyda_prod
DB_USER=peyda_user
DB_PASSWORD=your_secure_db_password_here

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# RabbitMQ Configuration
RABBITMQ_USER=peyda_user
RABBITMQ_PASS=your_secure_rabbitmq_password_here
RABBITMQ_VHOST=/

# Django Configuration
SECRET_KEY=your_very_long_secret_key_here_at_least_50_characters_long
ALLOWED_HOSTS=peyda-api.eitala.dev
FORCE_SSL=false

# AWS S3 Configuration for Static Files
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_STORAGE_BUCKET_NAME=peyda-static-files
AWS_S3_REGION_NAME=us-east-1

# Bot Tokens (replace with actual tokens)
EITAA_BOT_TOKEN=your_eitaa_bot_token_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
BALE_BOT_TOKEN=your_bale_bot_token_here

# N8N Configuration
N8N_USER=admin
N8N_PASSWORD=your_secure_n8n_password_here
N8N_WEBHOOK_SECRET=your_webhook_secret_here

# Frontend Configuration
FRONTEND_API_URL=https://peyda-api.eitala.dev

# Sentry Configuration (optional)
SENTRY_DSN=your_sentry_dsn_here
APP_VERSION=v1.0.0

# SSL Certificate Paths (for HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/your-domain.key

# Optional: Email Configuration
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your_email@gmail.com
# EMAIL_HOST_PASSWORD=your_app_password
# DEFAULT_FROM_EMAIL=your_email@gmail.com
